<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="?colorControlHighlight" />
            <corners android:radius="5dp" />
            <stroke android:width="1dp" android:color="?colorControlHighlight" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/colorBGWrappedRadio" />
            <corners android:radius="5dp" />
            <stroke android:width="1dp" android:color="@color/colorBGWrappedRadioBorder" />
        </shape>
    </item>
</selector>