<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:enterFadeDuration="@integer/intBGTransition"
    android:exitFadeDuration="@integer/intBGTransition">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="?colorControlHighlight" />
            <corners android:radius="5dp" />
            <stroke android:width="1dp"
                android:color="?colorControlHighlight" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/colorBGCardVariable" />
            <corners android:radius="5dp" />
            <stroke android:width="1dp"
                android:color="@color/colorDividerVariable" />
        </shape>
    </item>
</selector>