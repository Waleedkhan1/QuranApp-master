<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/dr_bg_action_cornered"
    android:gravity="center"
    android:orientation="vertical">

    <com.quranapp.islamic.views.reader.ChapterIcon
        android:id="@+id/chapterIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/dmnChapterIcon"
        android:visibility="gone"
        app:chapterNumber="3"
        app:layout_constraintBottom_toTopOf="@id/juzChapterVerseSpinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/juzIcon"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:gravity="center"
        android:includeFontPadding="false"
        android:textColor="@color/colorPrimary"
        android:textSize="19sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/juzChapterVerseSpinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.quranapp.islamic.views.readerSpinner2.juzChapterVerse.JuzChapterVerseSelector
        android:id="@+id/juzChapterVerseSpinner"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
